{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "pretty": true,
    "rootDir": ".",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "useDefineForClassFields": true
  },
  "exclude": [
    ".*cache",
    ".vscode",
    "dist",
    "node_modules/",
  ],
  "include": [
    "src",
    "webpack.config.ts"
  ]
}
{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "composite": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "pretty": true,
    "rootDir": ".",
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "declaration": false,
    "isolatedModules": false,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "./node_modules/",
    "./webpack.config.js",
    "./extension/"
  ]
}
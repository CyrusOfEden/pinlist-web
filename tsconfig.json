{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": false,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "pretty": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "useDefineForClassFields": true
  },
  "exclude": [
    ".*cache",
    "./dist/",
    "./node_modules/",
  ],
  "include": [
    "./src/",
    "webpack.web.js",
    "webpack.extension.js"
  ]
}
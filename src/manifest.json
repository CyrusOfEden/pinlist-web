{
  "manifest_version": 2,
  "name": "Pinlist",
  "description": "",
  "short_name": "Pinlist",
  "version": "0.0.1",
  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "permissions": [
    "activeTab",
    "history",
    "notifications",
    "storage",
    "tabs",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://www.googletagmanager.com; object-src 'self'",
  "__chrome|firefox__author": "volume",
  "__opera__developer": {
    "name": "volume"
  },
  "__firefox__applications": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },
  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Pinlist",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },
  "__chrome|opera__options_page": "app.html",
  "options_ui": {
    "page": "app.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },
  "background": {
    "scripts": [
      "dist/background.bundle.js"
    ],
    "__chrome|opera__persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "dist/contentScript.bundle.js"
      ]
    }
  ]
}